<div id="homepage">
    <section id="top">
	<header>
	    <div class="row">
		<div class="columns">
		    <%= image_tag 'logo_white.png', id: 'logo', class: 'float-left' %>
		    <%= link_to "Log in", login_path, id: 'login-button', class: "button hollow float-right radius" %>
		</div>
	    </div>
	</header>
	<div class="row">
	    <div class="columns">
		<h1 class="tagline text-center">The sources most important to you, first.</h1>
	    </div>
	</div>
	<div class="row">
	    <div class="medium-5 medium-centered large-4 columns">
		<%= link_to "Get started for free", signup_path, class: "button large expanded radius" %>
	    </div>
	</div>
    </section>

    <section id="screenshot">
	<div class="row">
	    <div class="columns">
		<picture class="float-center">
		    <source srcset="<%= image_path 'ss-large.png' %>" media="(min-width: 64em)">
		    <source srcset="<%= image_path 'ss-medium.png' %>" media="(min-width: 40em)">
		    <source srcset="<%= image_path 'ss-small.png' %>">
		    <img src="<%= image_path 'ss-large.png' %>">
		</picture>
	    </div>
	</div>
    </section>

    <section class="main-features">
	<div class="row small-up-1 medium-up-2">
	    <div class="column">
		<%= icon 'newspaper-o' %>
		<p>Follow your favorite websites, blogs, comics and more. Subscribe to anything with an RSS feed.</p>
	    </div>
	    <div class="column">
		<%= icon 'magic' %>
		<p>Get news from all your sources, no exceptions. High volume feeds will not appear too often.</p>
	    </div>
	    <div class="column">
		<%= icon 'star' %>
		<p>Star your must-read sources. These will be shown before anything else, whenever updated.</p>
	    </div>
	    <div class="column">
		<%= icon 'desktop' %>
		<%= icon 'tablet' %>
		<%= icon 'mobile' %>
		<p>Read on the go. Sourcerer works on all your devices. No app to install, just visit the website.</p>
	    </div>
	</div>
    </section>

    <section id="pricing">
	<div class="row text-center">
	    <div class="column">
		<header>
		    <h4>Pricing</h2>
		</header>
		<ul class="no-bullet">
		    <li><strong>Free:</strong> follow up to <%= Payment.feed_limit %> feeds.</li>
		    <li><strong>$<%= Payment.price %> / year:</strong> unlimited feeds, pay after <%= Payment.trial_duration.to_i/60/60/24 %>-day trial.</li>
		</ul>
	    </div>
	</div>
    </section>

    <footer>
	<div class="row text-center">
	    <div class="column">
		<p>Sourcerer is a Free and Open Source Software created by Thiago Rodrigues.</p>
		<%= mail_to 'thiago@fastmail.com', icon('envelope-o', 'Email', style: 'margin-right: 1px'), target: '_blank', style: 'margin-right: 15px' %>
		<%= link_to icon('github', 'GitHub'), 'https://github.com/trsantos/sourcerer', target: '_blank' %>
	    </div>
	</div>
    </footer>
</div>
