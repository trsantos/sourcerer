<% provide(:title, "Account") %>

<div class="row simple-container">
    <div class="medium-7 medium-centered columns box">
	<header>
	    <h3>Your account</h3>
	</header>

	<%= form_for(@user) do |f| %>
	    <%= render 'shared/error_messages' %>

	    <%= f.label :name %>
	    <%= f.text_field :name %>

	    <%= f.label :email %>
	    <%= f.email_field :email %>

	    <%= f.submit "Save changes", class: "button radius expand", data: { disable_with: "Please wait..." } %>
	<% end %>
	<p data-no-turbolink>
	    <strong>Subscription end date:</strong> <%= @user.expiration_date.to_date.to_formatted_s(:long) %><br>
	    <%= link_to "Export your data", opml_export_path %><br>
	    <%= link_to "Delete your account", current_user, method: :delete, data: { confirm: "Are you sure you want to delete your account? This can't be undone." } %>
	</p>
    </div>
</div>
