<% provide(:title, "Log in") %>

<div class="logo-wrap">
    <%= link_to image_tag('logo_dark.png'), root_url %>
</div>

<div class="row simple-container">
    <div class="medium-5 medium-centered columns box">
	<header>
	    <h3>Welcome back</h3>
	</header>

	<%= form_for(:session, url: login_path) do |f| %>
	    <%= f.label :email %>
	    <%= f.email_field :email %>

	    <%= f.label :password %>
	    <%= f.password_field :password %>

	    <%= f.label :remember_me do %>
		<%= f.check_box :remember_me %>
		Remember me
	    <% end %>

	    <%= f.submit "Log in", class: "button radius expand", data: { disable_with: "Please wait..." } %>
	<% end %>

	<div class="text-center">
	    <%= link_to "Forgot password?", new_password_reset_path %>
	    <p>New user? <%= link_to "Sign up", signup_path %></p>
	</div>
    </div>
</div>
